{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "backend/app/**/*.py",
        "use": "@vercel/python"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/app/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/"
      }
    ],
    "env": {
      "OPENAI_API_KEY": ""
    }
  }